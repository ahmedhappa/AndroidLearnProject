<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LearnServicesActivity">

    <EditText
        android:id="@+id/et_intent_service_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:textSize="17sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Start Intent Service" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_dark" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_foreground_service_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input foreground service data" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_foreground_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Foreground Service" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stop_foreground_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Foreground Service" />
</LinearLayout>