<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".alarmmanager.LearnAlarmManagerActivity">

    <Button
        android:id="@+id/btnRunAlarmManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="run alarm manager" />

    <Button
        android:id="@+id/btnCancelAlarmManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel alarm manager" />

    <Button
        android:id="@+id/btnStartCountDownTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count Down Timer" />


</LinearLayout>