<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LearnDataStore">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="key" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="value" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_to_datastore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save To Datastore" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_get_from_datastore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get From Data Store" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clear_data_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Data Store" />

</LinearLayout>