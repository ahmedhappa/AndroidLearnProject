<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".broadcastreceiver.LearnBroadcastReceiverActivity">

    <Button
        android:id="@+id/btn_explicit_static_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Explicit Static BroadCast Receiver"/>

    <Button
        android:id="@+id/btn_start_ordered_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Ordered BroadCast"/>

    <Button
        android:id="@+id/btn_start_permission_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Permission BroadCast"/>

</LinearLayout>