<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LearnExecutors">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_run_ui_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Ui Executor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_run_background_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run background executor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_run_background_executor_with_threads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run background executor with threads" />
</LinearLayout>