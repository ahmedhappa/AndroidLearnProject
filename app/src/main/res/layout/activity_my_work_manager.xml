<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyWorkManagerActivity">

    <Button
        android:id="@+id/btn_periodic_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Periodic Work Request"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_one_time_request" />

    <Button
        android:id="@+id/btn_one_time_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do One Time Work Request"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancel_specific_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Sepcefici Work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_periodic_work" />

    <Button
        android:id="@+id/btn_chain_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chain Works"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel_specific_work" />
</androidx.constraintlayout.widget.ConstraintLayout>